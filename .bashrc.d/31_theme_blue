#!/bin/sh

function theme_blue() {
	GIT_PS1_COLOR=41
	STATUS_FG=7
	if [ "${UID}" -eq 0 ]; then
		TIME_BG=197
		TIME_FG=220
		USERNAME_BG=197
		USERNAME_FG=117
		ATMARK_FG=114
		PWD_BG=232
		PWD_TRUNKMARK_FG=201
		PWD_FG=86
		EXTRA_FG=196
		EXTRA_TXT="${EXTRA_TXT_ROOT}"
		DOLLAR_FG=196
	else
		TIME_BG=55
		TIME_FG=220
		USERNAME_BG=17
		USERNAME_FG=117
		ATMARK_FG=114
		PWD_BG=232
		PWD_TRUNKMARK_FG=201
		PWD_FG=86
		EXTRA_FG=${GIT_PS1_COLOR}
		EXTRA_TXT="${EXTRA_TXT_USER}"
		DOLLAR_FG=208
	fi
}
