[include]
	path = ~/.gitconfig.local
[user]
	signingkey = 28A22BD8
[push]
	default = simple
[color]
	ui = auto
[alias]
	ci = commit
	co = checkout
	st = status
	di = diff -M -C
	dia = diff -M -C HEAD
	dic = diff --cached -M -C
	mff = merge --ff-only
	lga = log --all --decorate --graph --oneline

[pager]
	log = diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less

[url "git@github.com:turenar/"]
	insteadof = gh:
[url "git@github.com"]
	pushinsteadof = "https://github.com/"
	pushinsteadof = "git://github.com/"
